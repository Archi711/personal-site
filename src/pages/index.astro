---
import AppHeader from "@/components/features/AppHeader.astro";
import AboutMeStuff from "@/content/_unstructured/about.md";
import Head from "@/layouts/Head.astro";
import Layout from "@/layouts/Layout.astro";
---

<!-- <meta http-equiv="Refresh" content="0; URL=/xp" /> -->
<Layout>
  <Head
    slot="head"
    title="About me | Archi's"
    description="Hi, my name is Arek. I'm a fullstack dev, designer - all the good stuff"
  />
  <AppHeader />
  <main>
    <article
      class:list={[
        "py-8 mx-auto prose px-rws max-w-[65ch] starting:blur-lg transition starting:opacity-0 duration-700 ",
        "starting:scale-90 starting:translate-y-12",
      ]}>
      <AboutMeStuff />
    </article>
  </main>
</Layout>
